<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/boardStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.hr.kcosic.project.controllers.BoardController">
   <right>
       <SplitPane orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" BorderPane.alignment="CENTER">
           <GridPane>
               <columnConstraints>
                   <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
               <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="NEVER" />
                   <RowConstraints maxHeight="44.0" minHeight="10.0" prefHeight="39.0" valignment="CENTER" vgrow="NEVER" />
                   <RowConstraints maxHeight="303.0" minHeight="10.0" prefHeight="280.0" vgrow="SOMETIMES" />
                   <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
               </rowConstraints>
               <ListView fx:id="lvChatLog" GridPane.rowIndex="3" />
               <TextField fx:id="tfChatInput" onKeyReleased="#sendMessage" GridPane.rowIndex="4" />
               <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                   <Label fx:id="lblCurrentPlayerName">
                       <font>
                           <Font size="18.0"/>
                       </font>
                   </Label>
               </HBox>
               <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" GridPane.halignment="CENTER"
                     GridPane.rowIndex="2">
                   <Button fx:id="btnRoll" contentDisplay="CENTER" mnemonicParsing="false" onAction="#rollDice"
                           HBox.hgrow="ALWAYS">
                       <HBox.margin>
                           <Insets left="30.0"/>
                       </HBox.margin>
                   </Button>
                   <Label fx:id="lblDiceResult" alignment="CENTER" HBox.hgrow="ALWAYS">
                       <HBox.margin>
                           <Insets left="20.0"/>
                       </HBox.margin>
                   </Label>
               </HBox>
               <MenuBar nodeOrientation="RIGHT_TO_LEFT">
                   <Menu mnemonicParsing="false" text="Game">
                       <MenuItem fx:id="miAbortGame" mnemonicParsing="false" onAction="#onAbortGame" text="Abort game" />
                   </Menu>
               </MenuBar>

           </GridPane>
       </SplitPane>
   </right>
   <center>
       <StackPane fx:id="spMainStack" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
           <GridPane fx:id="gpBoard" gridLinesVisible="true">
           </GridPane>
           <Canvas fx:id="cBoard" />
       </StackPane>
   </center>

</BorderPane>
